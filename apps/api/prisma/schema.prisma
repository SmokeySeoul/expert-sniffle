generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     String         @id @default(uuid())
  email                  String         @unique
  passwordHash           String
  bankConnectionsEnabled Boolean        @default(false)
  emailParsingEnabled    Boolean        @default(false)
  aiAssistEnabled        Boolean        @default(false)
  autopilotEnabled       Boolean        @default(false)
  createdAt              DateTime       @default(now())
  updatedAt              DateTime       @updatedAt
  devices                Device[]
  sessions               Session[]
  subscriptions          Subscription[]
  auditLogs              AuditLog[]
  aiActionLogs           AIActionLog[]
  aiPatches              AIPatch[]
  aiProposals            AIProposal[]
  notificationPreference NotificationPreference?
  notifications          Notification[]
}

model Device {
  id         String    @id @default(uuid())
  userId     String
  name       String?
  trusted    Boolean   @default(false)
  lastSeenAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  sessions   Session[]
  auditLogs  AuditLog[]
}

model Session {
  id                String    @id @default(uuid())
  userId            String
  deviceId          String
  refreshTokenHash  String
  expiresAt         DateTime
  revokedAt         DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  device            Device    @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  auditLogs         AuditLog[]
}

model Subscription {
  id              String          @id @default(uuid())
  userId          String
  name            String
  amount          Decimal         @db.Decimal(12, 2)
  currency        String
  billingInterval BillingInterval
  nextBillingDate DateTime
  category        String?
  active          Boolean         @default(true)
  isTrial         Boolean         @default(false)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model NotificationPreference {
  userId            String     @id
  timezone          String     @default("UTC")
  quietHoursEnabled Boolean    @default(true)
  quietHoursStart   String     @default("21:00")
  quietHoursEnd     String     @default("08:00")
  digestMode        DigestMode @default(WEEKLY)
  channels          Json       @default(dbgenerated("'{\"email\":true,\"push\":false}'::jsonb"))
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  user              User       @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Notification {
  id            String               @id @default(uuid())
  userId        String
  type          NotificationType
  title         String
  body          String
  scheduledFor  DateTime
  sentAt        DateTime?
  readAt        DateTime?
  priority      NotificationPriority
  metadata      Json
  createdAt     DateTime             @default(now())
  user          User                 @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, scheduledFor])
  @@index([userId, readAt])
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String
  deviceId  String?
  sessionId String?
  action    String
  metadata  Json
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  device    Device?  @relation(fields: [deviceId], references: [id], onDelete: SetNull)
  session   Session? @relation(fields: [sessionId], references: [id], onDelete: SetNull)
}

model AIActionLog {
  id             String        @id @default(uuid())
  userId         String
  actionType     AIActionType
  topic          String
  inputRedacted  Json
  outputSummary  String        @db.VarChar(500)
  confidence     Float?
  provider       String
  success        Boolean
  latencyMs      Int
  createdAt      DateTime      @default(now())
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model AIProposal {
  id         String           @id @default(uuid())
  userId     String
  type       AIProposalType
  status     AIProposalStatus
  title      String
  summary    String           @db.VarChar(300)
  payload    Json
  confidence Float?
  createdAt  DateTime         @default(now())
  expiresAt  DateTime         @default(dbgenerated("now() + interval '14 days'"))
  user       User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  patches    AIPatch[]

  @@index([userId, createdAt])
  @@index([userId, status])
}

enum BillingInterval {
  MONTHLY
  YEARLY
}

enum DigestMode {
  OFF
  WEEKLY
  MONTHLY
}

enum NotificationType {
  TRIAL_ENDING
  RENEWAL_UPCOMING
  ANNUAL_WARNING
}

enum NotificationPriority {
  IMPORTANT
  INFO
}

enum AIActionType {
  EXPLAIN
  PROPOSE
  APPLY
  ROLLBACK
}

enum AIProposalType {
  RECATEGORIZE
  SAVINGS_LIST
}

enum AIProposalStatus {
  ACTIVE
  DISMISSED
  EXPIRED
  APPLIED
  ROLLED_BACK
}

model AIPatch {
  id            String         @id @default(uuid())
  userId        String
  proposalId    String
  type          AIPatchType
  status        AIPatchStatus  @default(APPLIED)
  forwardPatch  Json
  rollbackPatch Json
  appliedAt     DateTime       @default(now())
  rolledBackAt  DateTime?
  createdAt     DateTime       @default(now())
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  proposal      AIProposal     @relation(fields: [proposalId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([proposalId])
}

enum AIPatchType {
  RECATEGORIZE
}

enum AIPatchStatus {
  APPLIED
  ROLLED_BACK
}
